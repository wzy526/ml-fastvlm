import os
import json

# 检查GQA数据文件是否存在
data_path = '/perception-hl/zhuofan.xia/data/gqa/val_balanced_questions.json'
print(f'GQA数据文件存在: {os.path.exists(data_path)}')

# 检查图像文件夹是否存在
image_folder = '/perception-hl/zhuofan.xia/data/gqa/images'
print(f'图像文件夹存在: {os.path.exists(image_folder)}')

if os.path.exists(image_folder):
    # 列出图像文件夹中的实际文件
    files = os.listdir(image_folder)
    print(f'图像文件夹中的文件数量: {len(files)}')
    print('前10个文件:')
    for f in files[:10]:
        print(f'  {f}')
    
    # 检查是否有我们需要的文件
    test_ids = ['2405722', '2331963', '2400861']
    for test_id in test_ids:
        found = False
        for f in files:
            if test_id in f:
                print(f'找到包含 {test_id} 的文件: {f}')
                found = True
                break
        if not found:
            print(f'未找到包含 {test_id} 的文件')
