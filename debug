python -c "
import json
import os

# 加载GQA数据
with open('/perception-hl/zhuofan.xia/data/gqa/val_balanced_questions.json', 'r') as f:
    data = json.load(f)

# 获取前几个样本
samples = list(data.items())[:3]
image_folder = '/perception-hl/zhuofan.xia/data/gqa/images'

print('检查图像文件是否存在:')
for i, (qid, item) in enumerate(samples):
    image_id = item['imageId']
    image_path = os.path.join(image_folder, f'{image_id}.jpg')
    exists = os.path.exists(image_path)
    print(f'样本 {i+1}: Image ID {image_id} -> {image_path} -> 存在: {exists}')

print(f'\n图像文件夹内容 (前5个文件):')
if os.path.exists(image_folder):
    files = os.listdir(image_folder)[:5]
    for f in files:
        print(f'  {f}')
else:
    print(f'  图像文件夹不存在: {image_folder}')
"